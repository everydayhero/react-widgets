{
  "author": "EverydayHero <edh-dev@everydayhero.com>",
  "name": "edh-widgets",
  "version": "0.6.1",
  "description": "Widgets are small Javascript components that integrate with EverydayHero's API. These include search components and components for showing leaderboard and fundraising totals for campaigns, charities, and networks. Unlike iframe snippets, using widgets allows you to customise the base-level styling to suit your needs.",
  "license": "MIT",
  "main": "src/widgets.js",
  "dependencies": {
    "async": "^0.9.0",
    "es5-shim": "~4.0.5",
    "hui": "git://github.com/everydayhero/hui#0.7.7",
    "jsonp": "webmodules/jsonp",
    "lodash": "^3.8.0",
    "moment": "^2.10.2",
    "numeral": "~1.5.3",
    "paths-js": "^0.3.0",
    "react": "^0.12.2",
    "react-tween-state": "0.0.4",
    "remarkable": "^1.6.0"
  },
  "devDependencies": {
    "browserify": "~6.3.3",
    "compression": "~1.2.1",
    "express": "~4.10.4",
    "gulp": "~3.8.10",
    "gulp-autoprefixer": "~2.0.0",
    "gulp-awspublish": "~0.0.23",
    "gulp-concat": "~2.4.2",
    "gulp-inject": "~1.0.2",
    "gulp-jshint": "~1.9.0",
    "gulp-minify-css": "~0.3.11",
    "gulp-react": "~2.0.0",
    "gulp-rename": "~1.2.0",
    "gulp-replace": "^0.5.3",
    "gulp-sass": "~1.1.0",
    "gulp-uglify": "~0.3.1",
    "gulp-util": "~3.0.1",
    "jest-cli": "~0.1.18",
    "jshint-stylish": "~1.0.0",
    "morgan": "~1.5.0",
    "react-page-objects": "~0.1.2",
    "react-tools": "~0.12.2",
    "reactify": "~0.17.1",
    "simple-spinner": "~0.0.2",
    "superagent": "~0.21.0",
    "vinyl-buffer": "~1.0.0",
    "vinyl-source-stream": "~1.0.0",
    "wget": "~0.0.1"
  },
  "repository": {
    "type": "git",
    "url": "git://github.com/everydayhero/react-widgets.git"
  },
  "jshintConfig": {
    "eqnull": true,
    "lookup": false,
    "globalstrict": true,
    "globals": {
      "require": true,
      "module": true,
      "process": true,
      "jest": true,
      "describe": true,
      "beforeEach": true,
      "it": true,
      "expect": true,
      "spyOn": true,
      "document": true,
      "window": true,
      "jasmine": true,
      "setTimeout": true,
      "clearTimeout": true,
      "setInterval": true,
      "clearInterval": true,
      "console": true,
      "global": true
    }
  },
  "scripts": {
    "setup": "npm install && npm run build && npm test",
    "build": "gulp",
    "build-dev": "NODE_ENV=development gulp --debug",
    "watch": "npm run build && gulp watch",
    "watch-dev": "npm run build-dev && gulp watch --debug",
    "jshint": "gulp jshint",
    "scripts": "gulp scripts",
    "scripts-dev": "gulp scripts --debug",
    "styles": "gulp styles",
    "styles-dev": "gulp styles --debug",
    "test": "jest",
    "test-debug": "node --debug-brk --harmony ./node_modules/.bin/jest --runInBand",
    "start": "node server.js",
    "deploy-assets": "bin/deploy_assets"
  },
  "browserify": {
    "transform": [
      "reactify"
    ]
  },
  "jest": {
    "scriptPreprocessor": "<rootDir>/config/jest_preprocessor.js",
    "unmockedModulePathPatterns": [
      "<rootDir>/node_modules/react"
    ]
  }
}
