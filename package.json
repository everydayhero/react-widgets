{
  "author": "EverydayHero",
  "name": "widgets",
  "version": "0.0.7",
  "description": "Widgets are small Javascript components that integrate with EverydayHero's API. These include search components and components for showing leaderboard and fundraising totals for campaigns, charities, and networks. Unlike iframe snippets, using widgets allows you to customise the base-level styling to suit your needs.",
  "license": "MIT",
  "main": "src/widgets.js",
  "dependencies": {
    "compression": "~1.0.8",
    "express": "~4.4.5",
    "fs": "0.0.2",
    "jsxcs": "0.0.2",
    "morgan": "~1.1.1",
    "serve-static": "~1.1.0",
    "simple-spinner": "0.0.2",
    "superagent": "^0.20.0",
    "wget": "0.0.1"
  },
  "devDependencies": {
    "browserify": "~5.12.0",
    "es5-shim": "^4.0.3",
    "gulp": "^3.8.6",
    "gulp-autoprefixer": "0.0.8",
    "gulp-awspublish": "0.0.23",
    "gulp-browserify": "^0.5.0",
    "gulp-concat": "~2.2.0",
    "gulp-inject": "^1.0.1",
    "gulp-minify-css": "~0.3.6",
    "gulp-rename": "1.2.0",
    "gulp-sass": "~1.0.0",
    "gulp-uglify": "^0.3.1",
    "gulp-util": "^3.0.0",
    "jest-cli": "^0.1.18",
    "jsonp": "webmodules/jsonp",
    "lodash": "^2.4.1",
    "node-sass": "^0.9.6",
    "numeral": "1.5.3",
    "react": "^0.11.2",
    "react-tools": "^0.11.2",
    "reactify": "^0.14.0",
    "uglify-js": "^2.4.15",
    "uniq": "~1.0.1",
    "watchify": "^1.0.6"
  },
  "scripts": {
    "setup": "npm install && npm run build && npm test",
    "build": "gulp",
    "build-dev": "NODE_ENV=development gulp --debug",
    "scripts": "gulp scripts",
    "scripts-dev": "gulp scripts --debug",
    "watch": "npm run build && gulp watch",
    "watch-dev": "npm run build-dev && gulp watch --debug",
    "styles": "gulp styles",
    "styles-dev": "gulp styles --debug",
    "test": "jsxcs ./src/* --config=./config/jscs_config.json && jest",
    "start": "node server.js",
    "publish": "bin/version-check && gulp && gulp publish"
  },
  "browserify": {
    "transform": [
      "reactify"
    ]
  },
  "jest": {
    "scriptPreprocessor": "<rootDir>/config/jest_preprocessor.js",
    "unmockedModulePathPatterns": [
      "<rootDir>/node_modules/react"
    ]
  }
}
